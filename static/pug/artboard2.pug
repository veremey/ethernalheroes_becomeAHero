extends _layout
block content
	.out.out_center
		section.screen.is-animated
			.advantage
				.layout.section-inner
					.half.half_l
						h2.title-section.mod-white Subscribe to <br> gain an advantage!

					.half.half_r.half_flex
						form(action="/", method="POST", autocomplete="on").advantage__form.js-validate
							fieldset.advantage__fieldset
								input(type="email", name="email", placeholder="").advantage__input
								label(for="email").advantage__label
									span Enter your&nbsp;
									| email
							button(type="submit").btn-small Send


